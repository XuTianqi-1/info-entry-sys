<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="baseline.app.mapper.ContactPersonMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="baseline.app.pojo.entity.ContactPerson">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="cell_phone" property="cellPhone"/>
        <result column="email" property="email"/>
        <result column="address" property="address"/>
        <result column="address_detail" property="addressDetail"/>
        <result column="introduce" property="introduce"/>
        <result column="customer_id" property="customerId"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="enabled" property="enabled"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , name, gender, cell_phone, email, address, address_detail, introduce, customer_id, create_time, create_by, update_time, update_by, enabled
    </sql>

    <select id="manualPage" resultType="baseline.app.pojo.vo.ContactPersonVo">
        SELECT
        a.id,
        a.name,
        (select t_dictionary.name from t_dictionary where id = a.gender) as gender,
        a.cell_phone as cellPhone,
        a.email,
        a.address,
        a.address_detail as addressDetail,
        a.customer_id as customerId,
        a.update_time as updateTime,
        b.name as customerName
        FROM
        t_contact_person a
        LEFT JOIN
        t_customer b ON a.customer_id = b.id
        <where>
            <if test="param.name!=null and param.name!=''">
                and a.name like concat('%',concat(#{param.name},'%'))
            </if>
            <if test="param.customerId!=null and param.customerId!=''">
                AND b.id = #{param.customerId}
            </if>
        </where>
        order by a.update_time desc
    </select>
    <select id="queryByCustomerId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_contact_person
        where
        customer_id = #{customerId,jdbcType=VARCHAR}
    </select>
</mapper>
